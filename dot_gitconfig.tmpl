[user]
name = Matthew Wilding
email = {{ onepasswordRead "op://Personal/Email/username" }}
signingkey = ssh-rsa 

[gpg]
format = ssh

[gpg "ssh"]
allowedSignersFile = /home/anon/.config/git/allowed_signers
{{ if eq .chezmoi.os "darwin" -}}
program = "/applications/1password.app/contents/macos/op-ssh-sign"
{{ else if eq .chezmoi.os "linux" -}}
  {{ if (.chezmoi.kernel.osrelease | lower | contains "microsoft") -}}
program = "/mnt/c/Users/Matt/AppData/Local/1Password/app/8/op-ssh-sign-wsl"
  {{ else -}}
program = "/opt/1Password/op-ssh-sign"
  {{ end }}
{{- end }}

[commit]
gpgsign = true

[sendemail]
smtpserver = smtp.gmail.com
smtpuser = {{ onepasswordRead "op://Personal/Email/username" }}
smtppass = {{ onepasswordRead "op://Personal/Email/password" }}
smtpencryption = tls
smtpserverport = 587
confirm = auto

[alias]
c = clone --recursive --depth 1
r = reset --hard
wta = worktree add
wtl = worktree list
wtr = worktree remove

[init]
defaultBranch = main

[core]
editor = nvim
autocrlf = false
pager = delta
{{ if (and (ne .chezmoi.os "linux") (ne .chezmoi.os "darwin")) }}
sshCommand = C:/Windows/System32/OpenSSH/ssh.exe
{{- end }}

[interactive]
diffFilter = delta --color-only

[push]
autoSetupRemote = true

[delta]
navigate = true  # use n and N to move between diff sections
dark = true
side-by-side = true

[diff]
tool = nvim
algorithm = histogram

[difftool "nvim"]
cmd = nvim -d "$LOCAL" "$REMOTE" -c "DiffviewOpen"

[difftool]
prompt = false

[merge]
conflictStyle = zdiff3

[mergetool]
prompt = false
keepBackup = false

[filter "lfs"]
process = git-lfs filter-process
required = true
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f

# Providers
[includeIf "hasconfig:remote.*.url:git@gitlab.com:{{ onepasswordRead "op://Work/Work/org lower" }}/**"]
path = ~/.gitconfig_work

[includeIf "hasconfig:remote.*.url:git@ssh.dev.azure.com:v*/{{ onepasswordRead "op://Work/Work/org upper" }}/**"]
path = ~/.gitconfig_work

[includeIf "hasconfig:remote.*.url:git@{{ onepasswordRead "op://Work/Work/org lower" }}.github.com:*/**"]
path = ~/.gitconfig_work
